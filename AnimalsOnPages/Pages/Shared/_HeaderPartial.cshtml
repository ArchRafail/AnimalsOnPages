@{
    string path = Context.Request.Path;
    string query = Context.Request.Query["id"].ToString();
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                @AnimalsOnPages.Resources.Resource.CiteName_Title
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav nav-pills flex-grow-1 gap-3">
                    <li class="nav-item">
                        <a class="nav-link @(path.EndsWith("/") ? "active text-white" : "text-dark")" asp-area="" asp-page="/Index">@AnimalsOnPages.Resources.Resource.NavbarAnimals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @((path.EndsWith("/FormAnimal") && String.IsNullOrEmpty(query)) ? "active text-white" : "text-dark")" asp-area="" asp-page="/FormAnimal">@AnimalsOnPages.Resources.Resource.NavbarAddAnimal</a>
                    </li>
                </ul>
            </div>
            <div><partial name="_LanguageSwitcherPartial" /></div>
        </div>
    </nav>
</header>
